<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<%- include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis Pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item "><a href="/payment">Jenis Pembayaran</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Tambah Jenis Pembayaran</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/payment/create" method="POST" >
                    <div class="card-body">
                      <div class="form-group">
                        <label for="type">Tipe</label>
                        <input type="text" name="type" class="form-control" id="type" placeholder="Masukkan type pembayaran">
                      </div>
                      <div class="form-group">
                        <label>Bank</label>
                        <div class="select2-purple">
                          <select class="form-control select2" multiple="multiple" data-placeholder="Pilih bank"
                            style="width:100%;" name="banks" required>
                            <% banks.forEach(bank=>{ %>
                            <option value="<%=bank._id%>">  <%= bank.name %> - <%= bank.bankName %> - <%= bank.noRekening %></option>
                            <% }) %>
                          </select>
                        </div>

                      </div>

     

                      <!-- /.card-body -->

                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                  </form>
                </div>
                <!-- /.card -->

              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/js.ejs') %>
<script>
  function readURL(input){
      if(input.files&&input.files[0]){
        const reader= new FileReader();
        reader.onload=function(e){
          $('#preview').attr('src',e.target.result);
          $('#preview').attr('width','20%');
          $('#preview').attr('height','20%');
        }
        reader.readAsDataURL(input.files[0])
      }

      }

      $('#image').change(function(){
      readURL(this)
  } )
  </script>